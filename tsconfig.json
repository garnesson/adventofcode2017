{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./custom-types"]
  },
  "include": ["**/*.ts", "**/*.js", ".eslintrc.js", "custom-types"]
}

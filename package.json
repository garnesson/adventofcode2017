{
  "name": "advent-of-code",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "ts-node src/index.ts",
    "lint": "eslint --ext .js,.ts --quiet .",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "typecheck": "tsc --incremental false --noEmit",
    "test": "jest",
    "test:watch": "npm test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gustavkj/advent-of-code.git"
  },
  "author": "Gustav Utterheim <gustav@utterheim.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gustavkj/advent-of-code/issues"
  },
  "engines": {
    "node": "^14.15.1",
    "npm": "^6.14.8"
  },
  "homepage": "https://github.com/gustavkj/advent-of-code#readme",
  "dependencies": {
    "aoc-loader": "1.4.3",
    "dotenv": "8.2.0",
    "readline-sync": "1.4.10"
  },
  "devDependencies": {
    "@types/jest": "26.0.19",
    "@types/readline-sync": "1.4.3",
    "@typescript-eslint/eslint-plugin": "4.11.1",
    "@typescript-eslint/parser": "4.11.1",
    "eslint": "7.17.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "nodemon": "2.0.6",
    "prettier": "2.2.1",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": "prettier --write"
  }
}
